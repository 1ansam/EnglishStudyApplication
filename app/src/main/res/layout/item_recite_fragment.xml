<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background_white_circular_corner"
    android:elevation="8dp"
    android:paddingStart="@dimen/recite_layout_margin_horizontal"
    android:paddingEnd="@dimen/recite_layout_margin_horizontal">

    <RelativeLayout
        android:id="@+id/recite_layout_tool"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/recite_iv_collect"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/checkbox_star_selector" />

        <ImageView
            android:id="@+id/recite_iv_sure_state"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/recite_layout_main_word_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/recite_layout_button"
        android:layout_below="@+id/recite_layout_tool"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recite_tv_word_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_black"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/recite_layout_ph_en"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recite_tv_word_ph_en"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/recite_layout_height"
                android:gravity="center_vertical"
                android:text="英/student/"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/recite_iv_word_ph_en_mp3"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/horn_play_animation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recite_layout_ph_am"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recite_tv_word_ph_am"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/recite_layout_height"
                android:gravity="center_vertical"
                android:text="美/student/"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/recite_iv_word_ph_am_mp3"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@mipmap/icon_horn_cyan" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recite_recycler_view_word_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recite_layout_margin_veritical"
            android:layout_marginBottom="44dp"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/recite_iv_eye"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/recite_layout_main_word_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-32dp"
        android:src="@mipmap/icon_eye_close"
        android:tag="close" />


    <LinearLayout
        android:id="@+id/recite_layout_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recite_btn_not_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_cyan_circular_corner"
            android:text="@string/not_sure"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/recite_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_background_orange_circular_corner"
            android:text="@string/sure"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>


