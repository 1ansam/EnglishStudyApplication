                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_16"
                android:layout_below="@id/recite_full_tv_word_ph_en"
                android:layout_marginTop="@dimen/recite_layout_margin_veritical"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_horn_blue"
                android:layout_toEndOf="@id/recite_full_tv_word_ph_en"
                android:layout_alignTop="@+id/recite_full_tv_word_ph_am"
                android:layout_alignBottom="@+id/recite_full_tv_word_ph_am"
