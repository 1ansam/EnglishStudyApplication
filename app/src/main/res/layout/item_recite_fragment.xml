                android:layout_marginTop="@dimen/recite_layout_margin_veritical"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_horn_blue"
                android:layout_toEndOf="@id/recite_full_tv_word_ph_en"
                android:layout_alignTop="@+id/recite_full_tv_word_ph_en"
                android:layout_alignBottom="@+id/recite_full_tv_word_ph_en"
                android:layout_marginStart="24dp"/>

            <TextView
                android:id="@+id/recite_full_tv_word_ph_am"
