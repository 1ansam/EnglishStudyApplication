<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_word_item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fastScrollEnabled="true"
        android:scrollbars="vertical"
        app:fastScrollHorizontalThumbDrawable="@drawable/recycler_thumb_drawable"
        app:fastScrollHorizontalTrackDrawable="@drawable/recycler_line_drawable"
        app:fastScrollVerticalThumbDrawable="@drawable/recycler_thumb_drawable"
        app:fastScrollVerticalTrackDrawable="@drawable/recycler_line_drawable" />
</LinearLayout>
