<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_background_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/activity_item_iv_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/activity_item_tv_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/layout_background_light_cyan" />
</LinearLayout>

