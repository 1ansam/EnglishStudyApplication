<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/recite_layout_main_word_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/word_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark_black"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/word_layout_ph_en"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/word_tv_ph_en"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recite_layout_height"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/word_iv_ph_en_mp3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/horn_play_animation" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/word_layout_ph_am"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/word_tv_ph_am"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recite_layout_height"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/word_iv_ph_am_mp3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@mipmap/icon_horn_cyan" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/word_recycler_view_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recite_layout_margin_veritical"
        android:layout_marginBottom="44dp"
        android:visibility="gone" />

</LinearLayout>
