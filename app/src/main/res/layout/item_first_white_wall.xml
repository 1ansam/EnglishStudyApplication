<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginTop="6dp"
        android:src="@mipmap/icon_heart_spread"
        android:textSize="@dimen/text_size_20" />

    <LinearLayout
        android:id="@+id/white_wall_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/white_wall_iv_user_level"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:paddingTop="4dp"
            android:src="@mipmap/icon_level_four" />

        <TextView
            android:id="@+id/white_wall_user_tv_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/layout_margin_horizontal"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/white_wall_iv_user_level"
            android:gravity="center"
            android:text="@string/white_wall_user_pet_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/white_wall_tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/white_wall_layout_title"
        android:layout_marginStart="@dimen/layout_margin_horizontal"
        android:layout_marginEnd="@dimen/layout_margin_horizontal"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4dp"
        android:paddingTop="@dimen/layout_margin_vertical"
        android:text="@string/white_wall_default_comment"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_14" />

</RelativeLayout>
