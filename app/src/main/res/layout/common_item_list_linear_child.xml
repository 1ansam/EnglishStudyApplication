<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="@dimen/layout_margin_horizontal">

    <TextView
        android:id="@+id/common_item_tv_title"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_vertical"
        android:textColor="@color/text_dark_black"/>

    <TextView
        android:id="@+id/common_item_tv_body"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_size_16"
        android:gravity="center_vertical"
        android:textColor="@color/text_dark_black"
        android:layout_toEndOf="@id/common_item_tv_title"/>

    <ImageView
        android:id="@+id/common_item_iv_forward"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/icon_forward"
        android:visibility="gone" />

</RelativeLayout>
