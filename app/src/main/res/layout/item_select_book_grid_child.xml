<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_book_item_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackgroundBorderless">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/book_circular_dark_cyan"
        android:orientation="vertical"
        android:elevation="8dp">

        <TextView
            android:id="@+id/select_book_tv_book_name"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/center_vertical_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:gravity="center"
            android:textColor="@color/text_dark_black"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"/>

        <View
            android:id="@+id/center_vertical_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/select_book_tv_book_word_number"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/center_vertical_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_dark_black" />
    </RelativeLayout>


</LinearLayout>
