<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomShapeImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="svg" value="3" />
        </attr>

        <attr name="svg_raw_resource" format="reference" />

    </declare-styleable>

    <declare-styleable name="CustomButton">
        <!--背景色-->
        <attr name="btn_backgroundColor" format="color" />
        <!--圆角-->
        <attr name="btn_cornerRadius" format="dimension" />
        <attr name="btn_cornerRadii_topLeft" format="dimension" />
        <attr name="btn_cornerRadii_topRight" format="dimension" />
        <attr name="btn_cornerRadii_bottomLeft" format="dimension" />
        <attr name="btn_cornerRadii_bottomRight" format="dimension" />
        <!--描边颜色-->
        <attr name="btn_strokeColor" format="color" />
        <!--描边宽度-->
        <attr name="btn_strokeWidth" format="dimension" />
        <!--按压背景颜色-->
        <attr name="btn_pressedColor" format="color" />
        <!--是否使用按压波纹效果-->
        <attr name="btn_isPressEffectEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="start_index" format="integer"/>
        <attr name="end_index" format="integer"/>
        <attr name="span_color" format="color"/>
        <attr name="bg_span_color" format="color"/>
        <attr name="span_size" format="dimension"/>
    </declare-styleable>

</resources>